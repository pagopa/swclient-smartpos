<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:endIconMode="custom"
        app:endIconTint="@null"
        app:hintTextAppearance="@style/TextLabel"
        app:hintTextColor="@color/blue_grey_ultra_medium_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconTint="@null">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextInputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titillium_web_semi_bold"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/body"
            tools:hint="Codice Avviso" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/titillium_web_regular"
        android:textColor="@color/blue_grey_ultra_medium_dark"
        android:textSize="@dimen/body"
        app:layout_constraintEnd_toEndOf="@id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout"
        tools:text="0/18" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_input_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/body"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/titillium_web_regular"
        android:textColor="@color/blue_grey_ultra_medium_dark"
        android:textSize="@dimen/body"
        app:layout_constraintStart_toStartOf="@id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@id/textInputLayout"
        tools:text="Some instructions for filling info" />
</androidx.constraintlayout.widget.ConstraintLayout>