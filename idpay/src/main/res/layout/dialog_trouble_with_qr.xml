<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_75">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:background="@drawable/rounded_white_16_dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:importantForAccessibility="no"
            android:paddingHorizontal="@dimen/margin_horizontal"
            android:paddingTop="@dimen/margin_horizontal"
            android:src="@drawable/icon_close_primary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:fontFamily="@font/readex_pro"
            android:paddingHorizontal="@dimen/margin_horizontal"
            android:text="@string/qr_trouble_question"
            android:textColor="@color/black"
            android:textSize="@dimen/h4" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:fontFamily="@font/titillium_web_regular"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/margin_horizontal"
            android:text="@string/qr_trouble_question_description"
            android:textColor="@color/blue_io_dark"
            android:textSize="@dimen/body" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_trx_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/header_margin_top"
            android:fontFamily="@font/titillium_web_regular"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/h1_hero"
            android:background="@drawable/rounded_grey_light_16_dp"
            android:layout_marginHorizontal="@dimen/extra_large"
            android:paddingVertical="@dimen/extra_small"
            tools:text="A7U8GHI3" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>