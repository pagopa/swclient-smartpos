<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <it.pagopa.swc_smartpos.ui_kit.custom_keyboard.CustomKeyboard
        android:id="@+id/custom_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:is_pin="false"
        app:layout_constraintBottom_toTopOf="@id/btn_calculate_sale"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/amount" />

    <it.pagopa.swc_smartpos.ui_kit.buttons.CustomLoadingButton
        android:id="@+id/btn_calculate_sale"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/divider_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:text="@string/cta_confirm" />
</androidx.constraintlayout.widget.ConstraintLayout>